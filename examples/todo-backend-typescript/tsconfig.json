{
  "compilerOptions": {
    "rootDir": "app",
    "outDir": "dist",
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "removeComments": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "declaration": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["logs", "node_modules"],
  "include": ["app/**/*"]
}
