{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "featurehub-tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "noEmitOnError": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "verbatimModuleSyntax": false,
    "paths": {
      "featurehub-javascript-node-sdk": ["../../packages/node/src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
