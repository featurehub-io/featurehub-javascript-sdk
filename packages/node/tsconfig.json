{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "featurehub-tsconfig/base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "verbatimModuleSyntax": false,
    "lib": ["ESNext"],
    "types": ["node"],
    "paths": {
      "featurehub-javascript-core-sdk": ["../core/src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
