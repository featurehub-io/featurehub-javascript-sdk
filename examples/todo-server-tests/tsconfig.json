{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "featurehub-tsconfig/base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "noEmitOnError": true,
    "verbatimModuleSyntax": false,
    "types": ["node"],
    "paths": {
      "featurehub-javascript-node-sdk": ["../../packages/node/src"]
    }
  },
  "include": ["src/**/*", "features/**/*"]
}
